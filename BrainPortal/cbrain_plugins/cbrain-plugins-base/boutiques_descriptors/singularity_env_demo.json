{
    "name":           "ENVPrefix",
    "tool-version":   "1.0.0",
    "schema-version": "0.5",
    "author":         "Serge",
    "description":    "A demo CBRAIN task that adds SINGULARITYENV_ prefix to config environment variable names ",

    "command-line": "du -a -H -h [CBRAIN_INPUT] > report_$MYVARIABLE",
    "inputs": [
        {
            "name":              "Input file or directory",
            "id":                "my_input",
            "description":       "Any file or directory in CBRAIN",
            "type":              "File",
            "optional":          false,
            "list":              false,
            "value-key":         "[CBRAIN_INPUT]"
        }
   ],
    "output-files": [
        {
            "name":          "report",
            "id":            "s1",
            "description":   "The output of the 'du' command in human units",
            "optional": true,
            "list":          false,
            "path-template": "report*"
        }
    ],
    "custom": {
        "cbrain:readonly-input-files": true,
        "cbrain:author": "Serge Boroday",
        "cbrain:integrator_modules":         {"BoutiquesSingularityEnv": true}
    }
}
