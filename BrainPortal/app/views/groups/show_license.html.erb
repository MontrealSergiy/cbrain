<% title("License #{@license_id}", '') %>

<div id="show_license" class="content">

  <%- # actions -%>
  <% if @can_add_license %>
      <%= link_to "Add License", new_license_group_path(@group.id) %>
  <% end %>

  <div class="license_agreement">
    <i> </i>License <%= @license_id %> </div>

     <%= render :partial => 'show_license_text' %>
     <% if @is_signed %>
        <div>
          <%= form_tag sign_license_group_path(@group) do %>
            <%= hidden_field_tag :license_id, @license_id %>
            <div>
              <%= submit_tag "I agree with the above statement", :name => :agree,     :class => "button" %>
              <%= submit_tag "I do not agree",                   :name => :not_agree, :class => "button" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @current_licenses.size > 1 %>
        <div>
          All licenses for <%= @group.name %>
        </div>
        <div class="card-item">
          <% @current_licenses.each do |id| %>
            <%= link_to "License ##{id} #{id == @license_id? "- currently selected": ""}", show_license_group_path(:group_id => @group.id, :license_id => id), :class => "btn-text primary", 'data-active' => (id == @license_id), 'disabled' => (id == @license_id) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
