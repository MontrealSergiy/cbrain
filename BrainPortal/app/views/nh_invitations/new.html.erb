<% title 'New Invitation'%>

<%= error_messages_for @nh_invitation, :header_message => "Invitation could not be created." %>

<div class="nh_form">
  <%= form_tag nh_invitations_path, action: "create" do |f| %>
    <fieldset>
      <%= label :email, "Email"%>
      <%= text_field_tag :email %>
    <end>
    <%= hidden_field_tag "nh_project_id", @nh_project_id %>
    <div class="nh_form_button_section">
      <%= submit_tag "Invite", :class=>"btn-solid-secondary" %>
    </div>
  <% end %>
</end>