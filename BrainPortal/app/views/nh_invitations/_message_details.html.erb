<% messtype = mess.message_type # disguise confirmation for a flash notice until better styling added
   prefix = "flash"
   messclass = "#{prefix}_#{messtype}"
%>

<% unless mess.description.blank? %>
  <p class=<%= messclass %>>
    <%= Message.parse_markup( mess.description ).gsub(/\n/,"<BR>").html_safe %>
  </p>
<% end %>

<% unless mess.variable_text.blank? %>
    <p class=<%= messclass %>>
      <%= Message.parse_markup( mess.variable_text ).gsub(/\n/,"<BR>").html_safe -%>
    </p>
<% end %>

<% unless mess.expiry.blank? %>
    <p class=<%= messclass %>>
      Expires: <%=to_localtime(mess.expiry, :datetime) %>
    </p>
<% end %>

<% if mess.description.blank? && mess.variable_text.blank? && mess.expiry.blank? %>
  <p>
    (No Details)
  </p>
<% end %>

