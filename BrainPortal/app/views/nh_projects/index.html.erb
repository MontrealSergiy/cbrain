<% title 'Projects' %>

<%= link_to "New project", {:action => :new }, :method  => :get  %>

<h2>Projects</h2>

Number of projects: <%= @nh_projects.count %> <br>

<table>

  <tbody>
  <% @nh_projects.each do |project| %>
    <tr>
      <td><%= link_to project.name, {:action => :show, :id => project.id}, :method  => :get  %></td>
      <td><%= link_to 'Edit', {:action => :edit, :id => project.id}, :method  => :get %> </td>
    </tr>
  <% end %>
  </tbody>
</table>


