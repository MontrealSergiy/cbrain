<%= form_for @nh_project, :as => :nh_project, :url => { :action => action }, :datatype => "script" do |f| -%>

  <div>
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>

    <p>
    <%= f.label :description, "Description" %><br />
    <%= f.text_area :description, :rows => 4, :cols => 40 %>

    <p>
    <%= f.submit "#{action.to_s.capitalize}" %>
  </div>
<% end %>
