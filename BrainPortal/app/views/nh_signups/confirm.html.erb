<div id="nh_signups_show">
  <% if !current_user %>
    <a href="/signin">
      <div class="nh_logo"></div>
    </a>
  <% end %>

  <div class="empty-wrapper">
    <div class="empty">
      <div>
        <img class="empty-icon" src="/images/neurohub/NH_hbhl_lettermark_RGB.png" />
        <p class="empty-text">
          Thank you. You've confirmed your email address.
        </p>
        <p class="empty-text">
		  Now it's up to the administrators to review your request</br>
		  and you'll be notified if and when they approve it.
        </p>
        <%= link_to "Back to login", {:controller => "nh_sessions", :action => :new }, :method  => :get, :class => "btn-solid primary"  %>
      </div>
    </div>
  </div>
</div>
