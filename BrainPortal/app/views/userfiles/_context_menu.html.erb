<li id="down-ctx"
  class="act-item"
  data-url="<%= download_userfiles_path %>"
  data-method="POST"
  data-empty-selection="0"
>
  <div>
  Download
  <span class="ui-icon ui-icon-arrowthickstop-1-s"></span>
  </div>
</li>

<li id="copy-ctx"
  class="act-item"
  data-dialog="cpmv-dialog"
>
  <div>
  Copy
  <span class="ui-icon ui-icon-copy"></span>
  </div>
</li>

<li id="move-ctx"
  class="act-item"
  data-dialog="cpmv-dialog"
>
  <div>
  Move
  <span class="ui-icon ui-icon-arrowreturnthick-1-e"></span>
  </div>
</li>

<li id="ren-ctx"
  class="act-item"
>
  <div>
  Rename
  <span class="ui-icon ui-icon-pencil"></span>
  </div>
</li>

<li id="tags-ctx"
    class="act-item"
    data-dialog="tags-dialog"
>
  <div>
    Set tags by pattern
    <span class="ui-icon ui-icon-pencil"></span>
  </div>
</li>


<li id="comp-ctx"
  class="act-item"
  data-url="<%= compress_userfiles_path() %>"
  data-method="POST"
>
  <div>
  Compress
  <span class="ui-icon ui-icon-suitcase"></span>
  </div>
</li>

<li id="ucomp-ctx"
  class="act-item"
  data-url="<%= uncompress_userfiles_path() %>"
  data-method="POST"
>
  <div>
  Uncompress
  <span class="ui-icon ui-icon-folder-open"></span>
  </div>
</li>

<li id="del-ctx"
  class="act-item"
  data-url="<%= delete_files_userfiles_path %>"
  data-method="DELETE"
  data-confirm-dlg="delete-confirm"
  data-confirm-act="Delete"
>
  <div>
  Delete
  <span class="ui-icon ui-icon-trash"></span>
  </div>
</li>
<li class="menu-separator">-</li>

<li id="prop-ctx"
  class="act-item"
  data-dialog="prop-dialog"
>
  <div>
  Properties
  <span class="ui-icon ui-icon-document-b"></span>
  </div>
</li>
<li id="sync-ctx"
  class="act-item"
  data-url="<%= sync_multiple_userfiles_path(:operation => 'sync_local') %>"
  data-method="POST"
  data-empty-selection="0"
>
  <div>
  Synchronize
  <span class="ui-icon ui-icon-refresh"></span>
  </div>
</li>
<li id="mnew-ctx"
  class="act-item"
  data-url="<%= sync_multiple_userfiles_path(:operation => 'all_newer') %>"
  data-method="POST"
  data-empty-selection="0"
>
  <div>
  Mark as newer
  <span class="ui-icon ui-icon-flag"></span>
  </div>
</li>
