=============================================================
| PALETTE
=============================================================
*/

$DEFAULT_BG: #ffffff;
$DEFAULT_WASH: #efefef;
$DEFAULT_ALT: #787a7a;
$DEFAULT_DK: #343434;
$DEFAULT_TEXT: #000000;
$DEFAULT_DISABLED: #e5e5e5;

$PRIMARY_BG: #ff0000;
$PRIMARY_WASH: #ffeeee;
$PRIMARY_ALT: #e8182b;
$PRIMARY_DK: #9b0000;
$PRIMARY_TEXT: #b91f20;

$SECONDARY_BG: #25bfc1;
$SECONDARY_WASH: #effafa;
$SECONDARY_ALT: #00a1a0;
$SECONDARY_DK: #003943;
$SECONDARY_TEXT: #008484;

/*
=============================================================
| SHADOWS
=============================================================
$variant : xlow, low, mid, high.
*/

@mixin shadow($variant) {
  @if $variant == "xlow" {
    box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 6px, rgba(0, 0, 0, 0.12) 0px 1px 4px;
  }
  @if $variant== "low" {
    box-shadow: 0px 3px 1px -2px rgba(0, 0, 0, 0.2),
      0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 1px 5px 0px rgba(0, 0, 0, 0.12);
  }
  @if $variant == "mid" {
    box-shadow: 0px 2px 4px -1px rgba(0, 0, 0, 0.2),
      0px 4px 5px 0px rgba(0, 0, 0, 0.14), 0px 1px 10px 0px rgba(0, 0, 0, 0.12);
  }
  @if $variant == "high" {
    box-shadow: rgba(0, 0, 0, 0.26) 0px 1px 10px,
      rgba(0, 0, 0, 0.26) 0px 1px 8px;
  }
}

/*
=============================================================
| SPACE
=============================================================
$index : where 0 <= index < length of sizes array.

This generates bootstrap-like padding and margin classes.
They following classes are available:

%p, %px, %py, %pt, %pb, %pl, %prs
%m, %mx, %my, %mt, %mb, %ml, %mr

followed by an integer that represents the index of the
desired size from the sizes array e.g. py-2 = 0.5rem.

Note: @mixin is used in favour of not using @extend, but
classes are generated for inline style needs.
*/

$sizes: 0rem, 0.25rem, 0.5rem, 0.75rem, 1rem, 1.25rem, 1.5rem, 2rem, 2.5rem,
  3rem, 4rem, 5rem, 6rem, 8rem;

@function space($index) {
  @return nth($sizes, $index + 1);
}

@mixin p($index) {
  padding: space($index); // lists in scss are not zero-indexed.
}

@mixin px($index) {
  padding-left: space($index);
  padding-right: space($index);
}

@mixin pl($index) {
  padding-left: space($index);
}

@mixin pr($index) {
  padding-right: space($index);
}

@mixin py($index) {
  padding-top: space($index);
  padding-bottom: space($index);
}

@mixin pt($index) {
  padding-top: space($index);
}

@mixin pb($index) {
  padding-bottom: space($index);
}

@mixin m($index) {
  margin: space($index); // lists in sass are not zero-indexed.
}

@mixin mx($index) {
  margin-left: space($index);
  margin-right: space($index);
}

@mixin ml($index) {
  margin-left: space($index);
}

@mixin mr($index) {
  margin-right: space($index);
}

@mixin my($index) {
  margin-top: space($index);
  margin-bottom: space($index);
}

@mixin mt($index) {
  margin-top: space($index);
}

@mixin mb($index) {
  margin-bottom: space($index);
}

@each $size in $sizes {
  .p-#{index($sizes,$size)-1} {
    @include p(index($sizes, $size)-1);
  }
  .px-#{index($sizes,$size)-1} {
    @include px(index($sizes, $size)-1);
  }
  .py-#{index($sizes,$size)-1} {
    @include py(index($sizes, $size)-1);
  }
  .pt-#{index($sizes,$size)-1} {
    @include pt(index($sizes, $size)-1);
  }
  .pb-#{index($sizes,$size)-1} {
    @include pb(index($sizes, $size)-1);
  }
  .pr-#{index($sizes,$size)-1} {
    @include pr(index($sizes, $size)-1);
  }
  .pl-#{index($sizes,$size)-1} {
    @include pl(index($sizes, $size)-1);
  }
  .m-#{index($sizes,$size)-1} {
    @include m(index($sizes, $size)-1);
  }
  .mx-#{index($sizes,$size)-1} {
    @include mx(index($sizes, $size)-1);
  }
  .my-#{index($sizes,$size)-1} {
    @include my(index($sizes, $size)-1);
  }
  .mt-#{index($sizes,$size)-1} {
    @include mt(index($sizes, $size)-1);
  }
  .mb-#{index($sizes,$size)-1} {
    @include mb(index($sizes, $size)-1);
  }
  .mr-#{index($sizes,$size)-1} {
    @include mr(index($sizes, $size)-1);
  }
  .ml-#{index($sizes,$size)-1} {
    @include ml(index($sizes, $size)-1);
  }
}

/*
=============================================================
| TRANSITIONS
=============================================================
$variant : hover
$state   : on, off
*/

$TRANSITION_HOVER_ON: all 0.2s ease-in;
$TRANSITION_HOVER_OFF: all 0.2s ease-out;

/*
=============================================================
| BUTTONS
=============================================================
*/

@mixin button($bg, $border_color) {
  @include px(5);
  @include py(2);
  @include shadow("low");

  border-radius: 4px;
  border: 1px solid;
  outline: none;
  transition: $TRANSITION_HOVER_OFF;

  background-color: $bg;
  border-color: $border_color;

  &:hover {
    @include shadow("mid");
    cursor: pointer;
    transition: $TRANSITION_HOVER_ON;
  }
}

.btn-solid-default {
  @include button($DEFAULT_ALT, $DEFAULT_ALT);
  @include text-button($DEFAULT_BG);

  &:hover {
    @include button($DEFAULT_BG, $DEFAULT_BG);
    @include text-button($DEFAULT_ALT);
  }
}

.btn-solid-primary {
  @include button($PRIMARY_ALT, $PRIMARY_ALT);
  @include text-button($DEFAULT_BG);

  &:hover {
    @include button($PRIMARY_BG, $PRIMARY_BG);
  }
}

.btn-solid-secondary {
  @include button($SECONDARY_ALT, $SECONDARY_ALT);
  @include text-button($DEFAULT_BG);

  &:hover {
    @include button($SECONDARY_BG, $SECONDARY_BG);
  }
}

.btn-outline-default {
  @include button($DEFAULT_BG, $DEFAULT_ALT);
  @include text-button($DEFAULT_DK);

  &:hover {
    @include button($DEFAULT_WASH, $DEFAULT_ALT);
  }
}

.btn-outline-primary {
  @include button($DEFAULT_BG, $PRIMARY_ALT);
  @include text-button($PRIMARY_ALT);

  &:hover {
    @include button($PRIMARY_WASH, $PRIMARY_ALT);
  }
}

.btn-outline-secondary {
  @include button($DEFAULT_BG, $SECONDARY_ALT);
  @include text-button($SECONDARY_ALT);

  &:hover {
    @include button($SECONDARY_WASH, $SECONDARY_ALT);
  }
}

.btn-disabled-default {
  @include button($DEFAULT_DISABLED, $DEFAULT_DISABLED);
  @include text-button($DEFAULT_TEXT, 0.5);

  &:hover {
    @include shadow("low");
    cursor: not-allowed;
  }
}

.btn-disabled-primary {
  @include button($PRIMARY_WASH, $PRIMARY_WASH);
  @include text-button($PRIMARY_TEXT, 0.5);

  &:hover {
    @include shadow("low");
    cursor: not-allowed;
  }
}

.btn-disabled-secondary {
  @include button($SECONDARY_WASH, $SECONDARY_WASH);
  @include text-button($SECONDARY_TEXT, 0.5);

  &:hover {
    @include shadow("low");
    cursor: not-allowed;
  }
}

.btn-text-default {
  @include button("transparent", "transparent");
  @include text-button($DEFAULT_ALT);
  text-decoration: underline;
  border-radius: 0px !important;
  box-shadow: none !important;
  border: none !important;
  text-align: center;

  &:hover {
    @include button($DEFAULT_WASH, $DEFAULT_WASH);
    @include text-button($DEFAULT_TEXT);
  }
}

.btn-text-primary {
  @include button("transparent", "transparent");
  @include text-button($PRIMARY_TEXT);
  text-decoration: underline;
  border-radius: 0px !important;
  box-shadow: none !important;
  border: none !important;
  text-align: center;

  &:hover {
    @include button($PRIMARY_WASH, $PRIMARY_WASH);
    @include text-button($PRIMARY_BG);
  }
}

.btn-text-secondary {
  @include button("transparent", "transparent");
  @include text-button($SECONDARY_TEXT);
  text-decoration: underline;
  border-radius: 0px !important;
  box-shadow: none !important;
  border: none !important;
  text-align: center;

  &:hover {
    @include button($SECONDARY_WASH, $SECONDARY_WASH);
    @include text-button($SECONDARY_BG);
  }
}

.btn-nav-primary {
  @include button("transparent", "transparent");
  @include text-button($PRIMARY_TEXT);
  @include px(5);
  @include py(4);
  text-decoration: none;
  border-radius: 0px !important;
  margin: 0 !important;
  box-shadow: none !important;
  border: none !important;
  &:hover {
    @include button($PRIMARY_WASH, $PRIMARY_WASH);
    @include text-button($PRIMARY_BG);
    @include px(5);
    @include py(4);
    text-decoration: underline;
  }
}

/*
=============================================================
| PAGES
=============================================================
*/

html,
body {
  font-size: 16px;
  height: 100%;
}

#nh_toolbar {
  @include shadow("xlow");
  display: flex;
  align-items: center;
  min-height: space(7);
  .logo {
    @include logo(icon, RGB);
    @include mx(4);
    height: 4rem;
    width: space(7);
    height: space(7);
  }
  .nav_buttons {
    flex: 1;
    display: flex;
    justify-content: flex-end;
  }
}

#nh_content {
  height: 100%;
  &[data-isLoggedIn="true"] {
    @include p(8);
  }
}

/*
=============================================================
| SESSIONS
=============================================================
*/

#nh_sessions {
  height: 100%;
  display: flex;
  .nh_login {
    @include p(7);
    background: $DEFAULT_BG;
    flex: 1;
    display: flex;
    flex-wrap: wrap;
    .nh_logo {
      @include logo(wordmark, rgb);
      position: absolute;
      width: 10rem;
      height: 4rem;
    }
    .nh_login_form {
      align-self: center;
      flex: 1;
      display: flex;
      justify-content: center;
      flex-direction: column;
      label {
        @include title("xs");
        text-transform: uppercase;
        color: $DEFAULT_DK;
      }

      .login_input,
      .login_input:focus {
        @include mb(4);
        @include p(2);
        @include text("sm");

        border-color: $DEFAULT_WASH;
        box-shadow: none;
        outline: auto $DEFAULT_WASH 5px;
      }
    }
  }

  .nh_features {
    @include title("sm");
    @include p(7);
    background: $PRIMARY_DK;
    background-image: url("/images/neurohub/NH_login_backsplash.png");
    background-size: cover;
    background-blend-mode: color-dodge;
    flex: 1;
    display: flex;
    flex-wrap: wrap;
    position: relative;

    .nh_features_header {
      position: absolute;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      img {
        width: 10rem;
      }
      p {
        color: $DEFAULT_BG;
        text-align: center;
        width: 100%;
      }
    }
    .nh_features_list {
      color: $DEFAULT_BG;
      display: flex;
      flex-direction: column;
      flex: 1;
      align-items: center;
      align-self: center;
      .nh_feature {
        @include pb(4);
        display: flex;
        flex: 1;
        margin: 0 auto;
        align-items: center;
        justify-content: space-around;
        .nh_feature_icon {
          width: 5rem;
          height: 5rem;
        }
        .nh_feature_text {
          @include pl(4);
          max-width: 15rem;
        }
      }
      .nh_register {
        @include my(2);
        color: $DEFAULT_BG;
        &:hover {
          color: $PRIMARY_BG;
        }
      }
    }
  }
}
